
{
  "entities": {
    "galleryImage": {
      "title": "Gallery Image",
      "description": "Represents an image in the gallery.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the image."
        },
        "category": {
          "type": "string",
          "description": "The category of the image."
        },
        "image": {
          "type": "string",
          "description": "A data URI of the gallery image."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "title",
        "image",
        "createdAt",
        "category"
      ]
    },
    "galleryCategory": {
      "title": "Gallery Category",
      "description": "Represents a category for gallery images.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the category."
        }
      },
      "required": [
        "name"
      ]
    },
    "beadingPattiSize": {
      "title": "Beading Patti Size",
      "description": "Represents a size for beading patti.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The size name (e.g., '19mm x 12mm')."
        }
      },
      "required": [
        "name"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/gallery/{imageId}": {
      "schema": {
        "$ref": "#/entities/galleryImage"
      },
      "description": "Stores gallery images."
    },
    "/galleryCategories/{galleryCategoryId}": {
      "schema": {
        "$ref": "#/entities/galleryCategory"
      },
      "description": "Stores gallery image categories."
    },
    "/beadingPattiSizes/{beadingPattiSizeId}": {
      "schema": {
        "$ref": "#/entities/beadingPattiSize"
      },
      "description": "Stores beading patti sizes for the calculator dropdown."
    }
  }
}
